<script>
        function loadData(id) {
            // function body
            $.ajax({
                      type: "get",
                      data:{id:id},
                      url: '@Url.Action("ContactDetails", "Corps")',
                      dataType: "json",
                      success: function (result) {
                                    
                                    if(result == 0)
                                    {
                                        alert("No Data")
                                        $('#Company').text('');
                                        $('#Contact').text('');
                                        $('#Title').text('');
                                        $('#Suite').text('');
                                        $('#State').text('');
                                        $('#City').text('');
                                        $('#phoneno').text('');
                                        $('#altno').text('');
                                        $('#Urlweb').text('');
                                        $('#Zip').text('');
                                        $('#Email').text('');
                                        $('#Address').text('');
                                        $('#Url').text('');

                                        $('#RciNotes').html('');
                                        $('#Ngnotes').html('');
                                        $('#Misnotes').html('');
                                        $('#Visotes').html('');
                                        $('#tblQuotes').html('');
                                   }
                                   else{
                                       $('#contactContainer').show();
                                       $('#radioButtonDiv').show();
                                       $('#notesContainer').show();
                                       $('#quotesContainer').show();
                                       $('#Company').text(result[0].company);
                                       $('#Contact').text(result[0].contact);
                                       $('#Title').text(result[0].title);
                                       $('#Suite').text(result[0].address2);
                                       $('#State').text(result[0].state);
                                       $('#City').text(result[0].city);
                                       $('#phoneno').text(result[0].phone);
                                       $('#altno').text(result[0].altphone);
                                       $('#Urlweb').text(result[0].urlweb);
                                       $('#Zip').text(result[0].zip);
                                       $('#Email').text(result[0].email);
                                       $('#Address').text(result[0].address1);
                                       $('#Url').text(result[0].urlcareers);

                                       $('#Rcinotes').html(result[0].rcinotes_Pad);
                                       $('#Ngnotes').html(result[0].ngnotes_Pad);
                                       $('#Misnotes').html(result[0].misnotes_Pad);
                                       $('#Visotes').html(result[0].visnotes_Pad);
                                       GetQuotes(result);
                                       console.log(result);
                                   }
                                },
                                error: function () {
                                    alert('Error while loading contact, notes and quotes');
                                }
                            });

        }

        function loadPopup(id) {
            // function body
            $.ajax({
                type: "get",
                data: { id: id },
                url: '@Url.Action("QuotesPopup", "Corps")',
                dataType: "json",
                success: function (result) {
                    if (result == 0) {
                        alert("No Data")
                    }
                    else {
                        $('#Quotenum').text(result[0].quotenum);
                        $('#Qcompany').text(result[0].qcompany);
                        $('#Qconad2').text(result[0].qconad2);
                        $('#Qconcity').text(result[0].qconcity);
                        $('#Qconst').text(result[0].qconst);
                        $('#Qconurl').text(result[0].qconurl);
                        $('#Qcreateby').text(result[0].qcreateby);
                        $('#Qupdtby').text(result[0].qupdtby);
                        $('#Qconfby').text(result[0].qconfby);
                        $('#Qcancby').text(result[0].qcancby);
                        $('#Qinvnum').text(result[0].qinvnum);
                        $('#Qconad1').text(result[0].qconad1);
                        $('#Qconemail').text(result[0].qconemail);
                        $('#Qcontact').text(result[0].qcontact);
                        $('#Qconphon').text(result[0].qconphon);
                        $('#Qconfax').html(result[0].qconfax);
                        $('#Qconzip').html(result[0].qconzip);
                        $('#Qmedprice').html(result[0].qmedprice);
                        $('#Qmedsubtotal1').html(result[0].qmedsubtotal);
                        $('#Qmedsubtotal2').html(result[0].qmedsubtotal);
                        $('#Qmedadicdisc').html(result[0].qmedadicdisc);
                        $('#Qmedagdisctot').html(result[0].qmedagdisctot);
                        $('#Qmedtotal').html(result[0].qmedtotal);
                        $('#Qtotallist').html(result[0].qtotallist);
                        $('#Qtotal1').html(result[0].qtotal);
                        $('#Qtotal2').html(result[0].qtotal);
                        $('#Qagdiscper').html(result[0].qagdiscper);
                        $('#Qagdisctot').html(result[0].qagdisctot);
                    }
                },
                error: function () {
                    alert('Error while loading popup');
                }
            });

        }

        function GetQuotes(data)
        {
            //$("#tblQuotes").html('');
            var tr;
            var bhargva;
            //console.log(data)
            $.each(data,function(i,item){

                tr += "<tr><td>" + item['qcreatedat'] + "</td><td>" + item['qinvnum'] + "</td><td>" + item['qcontact'] + "</td><td>" + item['qcreateby'] + "</td><td>" + item['agcyid'] + "</td><td>" + item['qtotal'] + "</td><td>" + item['ordertaken'] + "</td><td>" + item['confirmed'] + "</td><td>" + item['cancelled'] + "</td>";

                tr += "<td class='view-icon sticky-content'  data-toggle='modal' data-target='#quotesModal'>" + "<img class='quotesPopup' quoteId=" + item['quotenum'] + " src='../Images/View.png' alt='View Icon' /></td></tr>";
            });
            $('#tblQuotes').html(tr);
        }

        $(document).ready(function (){

            $('#contactContainer').hide();
            $('#radioButtonDiv').hide();
            $('#notesContainer').hide();
            $('#quotesContainer').hide();

            $("#quoteTableData").on("click", ".quotesPopup", function(){
                var quoteId = $(this).attr("quoteId");
                loadPopup(quoteId);
            });

            $('#Rcinotes').show();
            $('#Ngnotes').hide();
            $('#Misnotes').hide();
            $('#Visotes').hide();

        $(".radiobtn").change(function(){
            var rId=$(this).attr("alt");
            $('#Rcinotes').hide();
            $('#Ngnotes').hide();
            $('#Misnotes').hide();
            $('#Visotes').hide();
            $('#'+rId).show();
        });
});
</script>
