<script>
    function loadData(id) {
        // function body
        $.ajax({
            type: "get",
            data: { id: id },
            url: '@Url.Action("ContactDetails", "Corps")',
            dataType: "json",
            success: function (result) {
                console.log(result);
                debugger;
                if (result == 0) {
                    alert("No Data")
                    $('#Company').text('');
                    $('#Contact').text('');
                    $('#Title').text('');
                    $('#Suite').text('');
                    $('#State').text('');
                    $('#City').text('');
                    $('#phoneno').text('');
                    $('#altno').text('');
                    $('#Urlweb').text('');
                    $('#Zip').text('');
                    $('#Email').text('');
                    $('#Address').text('');
                    $('#Url').text('');

                    $('#RciNotes').html('');
                    $('#Ngnotes').html('');
                    $('#Misnotes').html('');
                    $('#Visotes').html('');
                    $('#tblQuotes').html('');
                }
                else {
                    $('#Company').text(result[0].company);
                    $('#Contact').text(result[0].contact);
                    $('#Title').text(result[0].title);
                    $('#Suite').text(result[0].address2);
                    $('#State').text(result[0].state);
                    $('#City').text(result[0].city);
                    $('#phoneno').text(result[0].phone);
                    $('#altno').text(result[0].altphone);
                    $('#Urlweb').text(result[0].urlweb);
                    $('#Zip').text(result[0].zip);
                    $('#Email').text(result[0].email);
                    $('#Address').text(result[0].address1);
                    $('#Url').text(result[0].urlcareers);

                    $('#Rcinotes').html(result[0].rcinotes_Pad);
                    $('#Ngnotes').html(result[0].ngnotes_Pad);
                    $('#Misnotes').html(result[0].misnotes_Pad);
                    $('#Visotes').html(result[0].visnotes_Pad);
                    GetQuotes(result);
                }
            },
            error: function () {
                alert('error123');
            }
        });

    }
    function GetQuotes(data) {
        $("#tblQuotes").html('');
        var tr = "";
        $.each(data, function (i, item) {
            tr = "<tr><td>" + item.qinvnum + "</td><td>" + item.qcontact + "</td><td>" + item.agcyid + "</td><td>" + item.qtotal + "</td><td>" + item.confirmed + "</td><td>" + item.cancelled + "</td>";

            tr += "<td class='view-icon sticky-content' data-toggle='modal' data-target='#quotesModal'>" + "<img class='' src='../Images/View.png' alt='View Icon' /></td></tr>";
            console.log(tr);
            $("#tblQuotes").append(tr);
        });
    }
    $(document).ready(function () {
        console.log('test1');
        $('#Rcinotes').show();
        $('#Ngnotes').hide();
        $('#Misnotes').hide();
        $('#Visotes').hide();

        $(".radiobtn").change(function () {
            console.log('test2');
            var rId = $(this).attr("alt");
            $('#Rcinotes').hide();
            $('#Ngnotes').hide();
            $('#Misnotes').hide();
            $('#Visotes').hide();
            $('#' + rId).show();
        });
    });
</script>

