@model IEnumerable<CompanyContact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <partial name="~/Views/shared/_headerview.cshtml" />
    <div class="maqs-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div>
                        <input type="text" class="SearchBar"
                               placeholder="Search by company name, contact, city, state, zip, code ... etc" />
                        <button class="modal-button">
                            <img class="filter" data-toggle="modal" data-target="#searchModal"
                                 src="../Images/Vector.png" alt="Advanced Filter" id="advancedFilter" />
                        </button>
                    </div>


                    <div class="company-contact">
                        <div class="row add-margin">
                            <div class="col-lg-4">
                                <p class="company-title">Company Contacts</p>
                            </div>
                            <div class="col-lg-4">
                                <input type="text" class="company-search" placeholder="Search" />
                            </div>
                            <div class="col-lg-4 text-right">
                                <p class="company-records">Total Records: <b>254</b></p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="company-table-scrollbar scrollbar-style">
                                    <table id="tblCorp">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Contact</th>
                                                <th>Title</th>
                                                <th>Address</th>
                                                <th>Suite</th>
                                                <th>City</th>
                                                <th>State</th>
                                                <th>Zip</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var obj in Model){
                                                <tr>
                                                    <td>@obj.company</td>
                                                    <td>@obj.contact</td>
                                                    <td>@obj.title</td>
                                                    <td>@obj.address1</td>
                                                    <td>NULL</td>
                                                    <td>@obj.city</td>
                                                    <td>@obj.state</td>
                                                    <td>@obj.zip</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                            </div>
                            <div class="col-lg-6">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6">

                </div>
            </div>
        </div>
    </div>
</section>
